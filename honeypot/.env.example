MONGO_URI=mongodb://localhost:27017
DB_NAME=honeypot

# AI Provider Keys
GROQ_API_KEY=
GEMINI_API_KEY=
ELEVENLABS_API_KEY=

# --- JWT Authentication (Fix 3) ---
JWT_SECRET_KEY=change-me-to-a-long-random-string
